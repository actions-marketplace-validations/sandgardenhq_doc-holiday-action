  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sandgardenhq/doc-holiday-action/issues"
  },
  "homepage": "https://github.com/sandgardenhq/doc-holiday-action#readme",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@vercel/ncc": "^0.38.4",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0"
  }
